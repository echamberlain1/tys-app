<section class="intro-block page-bg">
	<div class="overlay default">
		<div class="container">
			<div class="text-slider no-js">
				<ul class="bxslider" id="text-slider" data-call="bxslider" data-options="parentSelector:'.text-slider', removeParentClass:'no-js', prevText:'', nextText:'', pager:true, controls:false, mode:'horizontal', auto:true, autoReload:true">
					<li>
						<div class="slide">
							<h2>Track your shit.</h2>
						</div>
					</li>
					<li>
						<div class="slide">
							<h2>View your friends' shit.</h2>
						</div>
					</li>
					<li>
						<div class="slide">
							<h2>Lend shit to friends.</h2>
						</div>
					</li>
					<li>
						<div class="slide">
							<h2>Rate your shit.</h2>
						</div>
					</li>
					<li>
						<div class="slide">
							<h2>Get shit recommendations.</h2>
						</div>
					</li>
				</ul>
				<p class="meta">Keep tabs on all of your movies, books, video games, etc...</p>
				<div>

					<%= link_to new_user_session_path, class: "scroll-to btn btn-primary" do %>
						<i class="fa fa-user"></i>Log In
					<% end %>
					<%= link_to new_user_registration_path, class: "scroll-to btn btn-primary" do %>
						<i class="fa fa-plus-circle"></i>Sign Up
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="content-block default-bg">
      
        <!-- Container -->
        <div class="container">
          <!-- Row -->

          	<div class="row">
	          	<ul class="portfolio-grid row space-b">
	            <!-- Column -->
	            	<li class="col-xs-12 col-sm-6 col-md-4">
	            		<div class="project showcase-img", style="height:300px;">
	            			<%= image_tag "Screenshot1.png" %>
	                    </div>
	                	<h4 class="u-case" style="text-align: center;">View your movie collection!</h4>
	            	</li>
	            	<li class="col-xs-12 col-sm-6 col-md-4">
	            		<div class="project showcase-img", style="height:300px;">
	            			<%= image_tag "Screenshot2.png" %>
	                    </div>
	                	<h4 class="u-case" style="text-align: center;">Many great features!</h4>
	            	</li>	
	            	<li class="col-xs-12 col-sm-6 col-md-4">
	            		<div class="project showcase-img", style="height:300px;">
	            			<%= image_tag "Screenshot3.png" %>
	                    </div>
	                	<h4 class="u-case" style="text-align: center;">See information about movies!</h4>
	            	</li>
	            </ul>
            </div>    
        </div>
</section>

<script type="text/javascript">
	$(document).ready( function() {
		$('#text-slider').bxSlider();
	});
</script>