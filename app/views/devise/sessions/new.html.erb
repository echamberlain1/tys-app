	<h2>Sign in</h2>
	<div class="form-block clearfix">
	  <div class="pull-left col">
	  <h4><i class="fa fa-lock"></i></i>Not Registered ?</h4>
	  <p></p>
	    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default" %>
	  </div>


	<div class="pull-right col">
		<center>
			<%- if devise_mapping.omniauthable? %>
				<%- resource_class.omniauth_providers.each do |provider| %>
	    			<%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-primary", style: "background-color: #000;" do %>
          				<i class="fa fa-github-square"></i>
          				<%= "Sign in with #{provider.to_s.titleize}" %>
        			<% end %>
	  			<% end -%>
	  		<% end -%>
	  	</center>
	  	<br /><hr style="margin-top:20px; margin-bottom: 20px;"/>

		<h4><i class="fa fa-user"></i></i>Login</h4>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  		<div><%= f.label :email %><br />
	  			<%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter email" %>
	  		</div>

	  		<div><%= f.label :password %><br />
	  			<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
	  		</div>

	  		<% if devise_mapping.rememberable? -%>
	    		<div class="checkbox space-b">
	    			<%= f.label :remember_me do %>
	    				<%= f.check_box :remember_me %> Remember Me
	    			<% end %> 
	    		</div>
			<% end -%>

	  		<div><%= f.submit "Sign in", class: "btn btn-primary" %></div><br />
	  		<div><%= link_to 'Cancel', root_path, class: "btn btn-default" %></div>
		<% end %>
		<br />

		<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  		<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
		<% end -%>
	</div>